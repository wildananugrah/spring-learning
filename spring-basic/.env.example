# ============================================
# ENVIRONMENT VARIABLES EXAMPLE
# Copy this file to .env and fill in your values
# ============================================

# ============================================
# SPRING BOOT CONFIGURATION
# ============================================

# Application Info
SPRING_APPLICATION_NAME=spring-basic-tutorial
SERVER_PORT=9000
SPRING_PROFILES_ACTIVE=development

# ============================================
# APPLICATION PROPERTIES
# ============================================

# Application Info
APP_NAME=Spring Boot Basics Tutorial
APP_VERSION=1.0.0
APP_DESCRIPTION=Learn Spring Boot fundamentals with practical examples
APP_AUTHOR=Spring Boot Learning Team

# Feature Flags
APP_ENABLE_CACHE=true
APP_ENABLE_MONITORING=true
APP_ENABLE_NOTIFICATIONS=false

# Maximum Values
APP_MAX_UPLOAD_SIZE=10485760
APP_MAX_CONNECTIONS=100
APP_TIMEOUT_SECONDS=30

# Supported Languages
APP_SUPPORTED_LANGUAGES=en,id,es,fr,de

# ============================================
# DATABASE CONFIGURATION
# ============================================

# Database Connection
DB_DRIVER=org.postgresql.Driver
DB_URL=jdbc:postgresql://localhost:5432/springbasic
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here

# Connection Pool
DB_POOL_MAX_SIZE=20
DB_POOL_MIN_SIZE=5
DB_POOL_TIMEOUT=30000

# HikariCP Configuration
HIKARI_MINIMUM_IDLE=5
HIKARI_MAXIMUM_POOL_SIZE=20
HIKARI_IDLE_TIMEOUT=300000
HIKARI_MAX_LIFETIME=1800000
HIKARI_CONNECTION_TIMEOUT=30000

# ============================================
# EMAIL CONFIGURATION
# ============================================

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=noreply@example.com
EMAIL_FROM=noreply@example.com
EMAIL_PASSWORD=your_app_specific_password

# ============================================
# LOGGING CONFIGURATION
# ============================================

LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_APP=DEBUG
LOGGING_PATTERN_CONSOLE=%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n

# ============================================
# JACKSON JSON CONFIGURATION
# ============================================

JACKSON_INDENT_OUTPUT=true
JACKSON_PROPERTY_INCLUSION=non_null

# ============================================
# OPTIONAL: EXTERNAL SERVICES
# ============================================

# API Keys and Secrets
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here
JWT_SECRET=your_jwt_secret_key_minimum_256_bits

# Redis Configuration (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# AWS Configuration (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# Monitoring and Logging (Optional)
SENTRY_DSN=your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_newrelic_key

# Security (Optional)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
MAX_LOGIN_ATTEMPTS=5
SESSION_TIMEOUT=3600

# JVM Configuration (Optional)
JAVA_OPTS=-Xmx512m -Xms256m

# ============================================
# IMPORTANT NOTES
# ============================================

# 1. NEVER commit .env file to version control
# 2. Add .env to your .gitignore file
# 3. Use different values for development, staging, and production
# 4. Keep secrets secure and rotate them regularly
# 5. Use environment-specific files: .env.development, .env.staging, .env.production

# How to use in Spring Boot:
# - Access via @Value: @Value("${DB_HOST}") String dbHost
# - Access via Environment: environment.getProperty("DB_HOST")
# - Spring automatically reads from environment variables
